

hiccups --cpu [--threads num_threads] [-m matrixSize] [-c chromosome(s)] [-r resolution(s)] 
		<HiC file> <outputDirectory> 
    
  
hiccups --restrict [-m matrixSize] [-c chromosome(s)] [-r resolution(s)]
                <HiC file> <outputDirectory>
                
                
#!/bin/bash                 
#
#$ -cwd                     
